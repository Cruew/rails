<p id="notice"><%= notice %></p>

<h1 id="title">Summer favourites!</h1>
  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-sm-2 col-md-3">
        <%= image_tag(product.textimage_url, class: "img-responsive radius") %>
        <h1 class="description header"><%=product.name %></h1>
        <p class="description descript-text"><%=product.description%></p>
        <strong><span class="description">Price: $</span><%= product.price%></strong>
        <br>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> 
      </div><!-- /col -->
    <% end %>
    </div>
  </div>

<br>
<div class="new-product btn btn-default"><%= link_to 'New Product', new_product_path %></div>
