<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
  <div class="container-fluid">
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.textimage_url, class: "img-responsive") %>
        <h1><%=product.name %></h1>
        <p><%=product.description%></p>
        <strong><span>$</span><%= product.price%></strong>   
      </div><!-- /col -->
    <% end %>
    </div>
  </div>

<br>

<div class="new-product btn btn-default"><%= link_to 'New Product', new_product_path %></div>
