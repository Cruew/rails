<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <hr class="colorgraph">

  <div class="field">
    <%= f.label :name, :class => "product-description" %><br>
    <%= f.text_field :name, :class => "btn btn-default", :placeholder => "Name of Product" %>
  </div>
  <div class="field">
    <%= f.label :description, :class => "product-description"  %><br>
    <%= f.text_area :description, :class => "btn btn-default", :placeholder => "Description" %>
  </div>
  <div class="field">
    <%= f.label :image_url, :class => "product-description"  %><br>
    <%= f.text_field :textimage_url, :class => "btn btn-default", :placeholder => "Image URL" %>
  </div>
  <div class="field">
  <%= f.label :colour, :class => "product-description"  %><br>
  <%= f.text_field :colour, :class => "btn btn-default", :placeholder => "Colour " %>
  </div>
  <div class="field">
  <%= f.label :price, :class => "product-description"  %><br>
  <%= f.text_field :price, :class => "btn btn-default", :placeholder => "Price" %>
  </div>
  <div class="actions">
    <%= f.submit :class => " btn btn-primary" %>
  </div>
<% end %>
